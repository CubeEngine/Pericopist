<?xml version="1.0" encoding="UTF-8"?>
<extractor charset="utf-8">
    <source language="java">

        <directory>./core/src/test/resources</directory>

        <translatables>
            <method>
                <name>test.I18n#getTranslation</name>
            </method>

            <method>
                <name>test.I18n#getTranslationN</name>
                <singular>0</singular>
                <plural>1</plural>
            </method>

            <method static="true">
                <name>test.I18n#_</name>
            </method>

            <annotation>
                <name>test.anot.TestSingleMemberAnnotation</name>
            </annotation>

            <annotation>
                <name>text.anot.TestNormalAnnotation</name>
                <fields>
                    <field>desc</field>
                    <field>usage</field>
                </fields>
            </annotation>
        </translatables>
    </source>

    <catalog format="gettext">
        <removeUnusedMessages>true</removeUnusedMessages>
        <pluralAmount>4</pluralAmount>
        <template>./core/src/test/resources/messages.pot</template>
        <header>
            <comments>./core/src/test/resources/header.txt</comments>
            <metadata>
                <entry key="Project-Id-Version">PACKAGE VERSION</entry>
                <entry key="POT-Creation-Date" variable="true">${date.get('yyyy-MM-dd HH:mm:ssZ')}</entry>
                <entry key="Last-Translator">FULL NAME &lt;EMAIL@ADDRESS&gt;</entry>
            </metadata>
        </header>
    </catalog>

</extractor>