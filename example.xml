<?xml version="1.0" encoding="UTF-8"?>
<extractor>
    <source language="java">

        <directory>src/test/resources</directory>

        <methods>
            <method>
                <name>getTranslation</name>
            </method>
            <method>
                <name>getTranslationN</name>
                <singular>1</singular>
                <plural>2</plural>
            </method>
        </methods>

        <annotations>
            <annotation>
                <name>test.anot.TestSingleMemberAnnotation</name>
            </annotation>
            <annotation>
                <name>text.anot.TestNormalAnnotation</name>
                <fields>
                    <field>desc</field>
                    <field>usage</field>
                </fields>
            </annotation>
        </annotations>

    </source>

    <catalog format="gettext" charset="utf-8">
        <removeUnusedMessages>false</removeUnusedMessages>
        <template>./messages.pot</template>
        <header>
            <comments>header.txt</comments>
            <metadata>
                <entry key="Project-Id-Version">PACKAGE VERSION</entry>
                <entry key="POT-Creation-Date" variable="true">${date.get('yyyy-MM-dd HH:mm:ssZ')}</entry>
                <entry key="Last-Translator">FULL NAME &lt;EMAIL@ADDRESS&gt;</entry>
            </metadata>
        </header>
    </catalog>

</extractor>