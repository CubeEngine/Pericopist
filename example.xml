<?xml version="1.0" encoding="UTF-8"?>
<extractor>
    <source language="java">

        <directory>src/test/resources</directory>

        <methods>
            <method>
                <name>getTranslation</name>
            </method>
            <method>
                <name>getTranslationN</name>
                <singular>1</singular>
                <plural>2</plural>
            </method>
        </methods>

        <annotations>
            <annotation>
                <name>test.anot.TestSingleMemberAnnotation</name>
            </annotation>
            <annotation>
                <name>text.anot.TestNormalAnnotation</name>
                <fields>
                    <field>desc</field>
                    <field>usage</field>
                </fields>
            </annotation>
        </annotations>

    </source>

    <catalog format="gettext">
        <removeUnusedMessages>false</removeUnusedMessages>
        <template>./messages.pot</template>
        <header>
            <comments>header.txt</comments>
            <metadata>
                <entry key="date">${date}</entry>
                <entry key="version">${project.version}</entry>
                <entry key="bla">blub</entry>
            </metadata>
        </header>
    </catalog>

</extractor>